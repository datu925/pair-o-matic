<p id="notice"><%= notice %></p>

<h1>Listing User Details</h1>

<table>
  <thead>
    <tr>
      <th>Prefer in person</th>
      <th>Time zone</th>
      <th>Prefer location cohort</th>
      <th>Slack handle</th>
      <th>Phone</th>
      <th>Cohort</th>
      <th>Year</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_details.each do |user_detail| %>
      <tr>
        <td><%= user_detail.prefer_in_person %></td>
        <td><%= user_detail.time_zone %></td>
        <td><%= user_detail.prefer_location_cohort %></td>
        <td><%= user_detail.slack_handle %></td>
        <td><%= user_detail.phone %></td>
        <td><%= user_detail.cohort %></td>
        <td><%= user_detail.year %></td>
        <td><%= user_detail.location %></td>
        <td><%= link_to 'Show', user_detail %></td>
        <td><%= link_to 'Edit', edit_user_detail_path(user_detail) %></td>
        <td><%= link_to 'Destroy', user_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


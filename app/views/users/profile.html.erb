<p id="notice"><%= notice %></p>

<p>
  <strong>First name:</strong>
  <%= @user.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @user.last_name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Avatar:</strong>
  <%= @user.avatar %>
</p>

<p>
  <strong>Role:</strong>
  <%= @user.role %>
</p>

<h1>Availabilities</h1>
<%= link_to("Make new availability", new_availability_path) %>

<% current_user.availabilities.each do |availability| %>
  <ul>
    <li>Time: from <%= availability.start %> to <%= availability.end %></li>
  </ul>
<% end %>


<h1>Group Availabilities</h1>

<% Availability.other_availabilities(current_user.id).each do |availability| %>
  <ul>
    <li>Time: from <%= availability.start %> to <%= availability.end %></li>
  </ul>
<% end %>

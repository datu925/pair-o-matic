<p id="notice"><%= notice %></p>

<h1>Listing Availabilities</h1>

<table>
  <thead>
    <tr>
      <th>Start</th>
      <th>End</th>
      <th>Status</th>
      <th>User</th>
      <th>Desired challenge</th>
      <th>Enforce boundaries</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @availabilities.each do |availability| %>
      <tr>
        <td><%= availability.start %></td>
        <td><%= availability.end %></td>
        <td><%= availability.status %></td>
        <td><%= availability.user_id %></td>
        <td><%= availability.desired_challenge_id %></td>
        <td><%= availability.enforce_boundaries %></td>
        <td><%= link_to 'Show', availability %></td>
        <td><%= link_to 'Edit', edit_availability_path(availability) %></td>
        <td><%= link_to 'Destroy', availability, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


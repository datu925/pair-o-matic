<%= form_for(@availability) do |f| %>
  <% if @availability.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@availability.errors.count, "error") %> prohibited this availability from being saved:</h2>

      <ul>
      <% @availability.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :start %><br>
    <%= f.datetime_select :start, ampm: true, default: 1.day.from_now %>
  </div>
  <div class="field">
    <%= f.label :end %><br>
    <%= f.datetime_select :end, ampm: true, default: 1.day.from_now %>
  </div>
  <div class="field">
    <%= f.label "Desired challenge (optional)" %><br>
    <%= f.text_field :desired_challenge_id %>
  </div>
  <div class="field">
    <%= f.label "Enforce boundaries?" %><br>
    <%= f.check_box :enforce_boundaries %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
